<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeedActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/ic_plusss_foreground"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop" />
        <ImageView
            android:src="@drawable/ic_instagrambanner_foreground"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="10dp"/>
        <ImageView
            android:src="@drawable/ic_message_foreground"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview1"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end" >

        <ImageView
            android:src="@drawable/ic_home_foreground"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:src="@drawable/ic_search_foreground"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:src="@drawable/ic_camera_foreground"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:src="@drawable/heart"
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_weight="1"
            android:src="@drawable/image"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

</LinearLayout>